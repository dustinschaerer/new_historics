<div class="container m-t-20">
  <div class="row">
    <div class="col-lg-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Messages</h1>
      <hr>
      <div id="no-more-tables">
        <table class="table-bordered table-striped table-condensed cf">
          <thead class="cf">
            <tr>
              <th>Email</th>
              <th>Content</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td data-title="Email Address"><%= message.email %></td>
                <td data-title="Message"><%= truncate(message.content, length: 220) %></td>
                <td data-title="View Message"><%= link_to 'Show', message, class: 'btn btn-info' %></td>
                <td data-title="Delete Message"><%= link_to 'Destroy', message, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <br>

      <%= link_to 'New Message', new_message_path, class: 'btn btn-success' %>
      <br>
      <br>
    </div>
  </div>
</div>
