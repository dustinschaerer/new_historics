<div class="container-fluid bg-1">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Home Page Settings</h1>
      </div>
    </div>
  </div>
</div>

<div class="container m-t-20">
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
        <div class="container m-t-20">
          <div class="row">
            <div class="col-xs-12">Main image url</div>
            <div class="col-xs-12"><%= @setting.main_image_url %></div>
          </div>
          <div class="row">
            <div class="col-xs-12">Title</div>
            <div class="col-xs-12"><%= @setting.title %></div>
          </div>
          <div class="row">
            <div class="col-xs-12">Subtitle</div>
            <div class="col-xs-12"><%= @setting.subtitle %></div>
          </div>
          <div class="row">
            <div class="col-xs-12">Description</div>
            <div class="col-xs-12"><%= @setting.description %></div>
          </div>
          <div class="row">
            <div class="col-xs-12">Section title</div>
            <div class="col-xs-12"><%= @setting.section_title %></div>
          </div>
          <div class="row">
            <div class="col-xs-12">Projects title</div>
            <div class="col-xs-12"><%= @setting.projects_title %></div>
          </div>

        </div>
      <%= link_to 'Edit', edit_setting_path(@setting) %>
      <br>
    </div>
  </div>
</div>