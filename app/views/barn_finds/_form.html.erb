<%= simple_form_for(@barn_find, :html => {multipart: true}) do |f| %>

  <%= f.error_notification %>
  <div class="field">
    <%= f.input :title %>
  </div>
  <div class="field">
    <%= f.input :article_image, as: :file %>
  </div>
  <div class="field">
    <b>Content</b>
    <%= f.trix_editor :content %>
  </div>
  <div class="field">
    <b>Teaser Content</b>
    <%= f.trix_editor :teaser %>
  </div>

  <!-- <div class="field">
    <%= f.input :supporting_images, as: :file, :input_html => { :multiple => true } %>
  </div>
 -->

  <div class="field">
    <%= f.input :date_published, as: :date %>
  </div>
  <div class="field">
    <%= f.input :published, as: :boolean %>
  </div>
  <div class="field">
        <%= f.association :admin_user, label_method: :email, value_method: :id %>
  </div>
  <div class="field">
    <%= f.input :slug %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  <br>
  <br>
<% end %>
