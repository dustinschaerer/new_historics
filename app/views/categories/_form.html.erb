<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :category_id, value: @category.id %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sort %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
  <br>
  <br>
<% end %>
