<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <h1>Custom Builds - Vintage Porsche</h1>
      <h4>Sub-Heading Text can go here if needed.</h4>

      <% @builds.each do |build| %>
        <h2><%= link_to build.title, build_path(build.slug) %></h2>
        <div class="row">
          <div class="col-lg-4">
            <!-- build.main_image -->
            <%= image_tag 'custom1.jpg', class: "img-responsive" %>
          </div>
          <div class="col-lg-8">
            <%= build.content.html_safe %>
          </div>
      </div>
      <% end %>

      <br>
      <%= link_to 'Add New Custom Build', new_build_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<br>