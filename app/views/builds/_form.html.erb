<%= simple_form_for(@build) do |f| %>

  <%= f.error_notification %>
  <div class="field">
    <%= f.input :title %>
  </div>
  <div class="field">
    <%= f.trix_editor :content %>
  </div>
  <div class="field">
    Teaser Content
    <%= f.trix_editor :teaser %>
  </div>
  <div class="field">
    <%= f.input :article_image, as: :file %>
  </div>
  <div class="field">
    <%= f.input :date_published, as: :date %>
  </div>
  <div class="field">
    <%= f.input :published, as: :boolean %>
  </div>
  <div class="field">
    <%= f.association :admin_user, label_method: :email, value_method: :id %>
  </div>
  <div class="field">
    <%= f.input :slug %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  <br>
  <br>
<% end %>
